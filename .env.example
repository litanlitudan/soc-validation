# SoC Validation Test Infrastructure - Environment Configuration
# Copy this file to .env and update with your values

# ============================================================================
# PROJECT CONFIGURATION
# ============================================================================
PROJECT_NAME=soc-validation

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
# SQLite Configuration (simplified for development)
PREFECT_DATABASE_URL=sqlite+aiosqlite:////data/prefect.db

# ============================================================================
# SERVICE PORTS
# ============================================================================
PREFECT_API_PORT=4200
DEVICE_MANAGER_PORT=8000
NOTIFICATION_PORT=9000
REDIS_PORT=6379

# ============================================================================
# SERVICE CONFIGURATION
# ============================================================================
# Prefect Configuration
PREFECT_API_URL=http://localhost:4200/api
PREFECT_LOGGING_LEVEL=INFO

# Device Manager Configuration
DEVICE_MANAGER_LOG_LEVEL=INFO

# Notification Configuration
NOTIFICATION_LOG_LEVEL=INFO

# ============================================================================
# REDIS CONFIGURATION
# ============================================================================
REDIS_HOST=redis
REDIS_URL=redis://redis:6379

# ============================================================================
# NOTIFICATION SERVICES (Optional)
# ============================================================================
# Slack Configuration
SLACK_WEBHOOK_URL=
SLACK_VERIFICATION_TOKEN=
SLACK_CHANNEL=#soc-validation

# Feishu Configuration
FEISHU_WEBHOOK_URL=
FEISHU_VERIFICATION_TOKEN=

# ============================================================================
# STORAGE CONFIGURATION
# ============================================================================
ARTIFACT_PATH=/data/artifacts
ARTIFACT_RETENTION_DAYS=7
MAX_DISK_USAGE_GB=100
LOG_PATH=/data/logs
LOG_RETENTION_DAYS=30

# ============================================================================
# BOARD CONFIGURATION
# ============================================================================
BOARDS_CONFIG_PATH=/app/config/boards.yaml
DEFAULT_TELNET_PORT=23
DEFAULT_TEST_TIMEOUT=1800  # 30 minutes
DEFAULT_LEASE_TIMEOUT=3600  # 1 hour

# Board Credentials (if needed)
BOARD_DEFAULT_USERNAME=admin
BOARD_DEFAULT_PASSWORD=

# ============================================================================
# QUEUE CONFIGURATION
# ============================================================================
MAX_QUEUE_SIZE=50
DEFAULT_PRIORITY=2  # 1=high, 2=normal, 3=low
QUEUE_WAIT_WARNING_MINUTES=30

# ============================================================================
# HEALTH CHECK CONFIGURATION
# ============================================================================
HEALTH_CHECK_INTERVAL=60
BOARD_FAILURE_THRESHOLD=3
BOARD_QUARANTINE_HOURS=24

# ============================================================================
# WEBHOOK CONFIGURATION (Optional)
# ============================================================================
WEBHOOK_SECRET=your-webhook-secret-here

# CI/CD Integration (Optional)
JENKINS_URL=
JENKINS_USER=
JENKINS_TOKEN=